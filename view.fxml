<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane fx:controller="org.group8.assignment3javafx.Controller"
          xmlns:fx="http://javafx.com/fxml" alignment="center" hgap="10" vgap="10">
    <Label text="Enter first number:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="input1" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
    <Label text="Enter second number:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="input2" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    <Button text="Calculate" fx:id="calculateButton" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
    <Label text="Result:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
    <Label fx:id="resultLabel" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
</GridPane>
